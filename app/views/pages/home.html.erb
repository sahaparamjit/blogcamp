    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <% @post.each do |post| %>
                <div class="panel panel-default">
                    <div class="panel-body">
                        <small><i class="fa fa-tags"></i> <%= post.tags %> <time><%= post.created_at.strftime("%b %d, %y")%></time></small>
                    <a href=<%= user_post_url(user_id: post.user_id, id: post.id) %> class="posts">
                        <h2 class="post-title">
                            <%= post.title %>
                        </h2>
                        <small><%= truncate post.content.html_safe, length:1000,class:'text-justify', :escape => false %></small>
                    </a>
                    <p class="post-meta">Posted by <%= link_to post.user.email, user_posts_url(post.user.id) %> on <%= post.created_at.strftime("%Y-%m-%d")%></p>
                    </div>
                </div>
                <hr>
                <% end %>
                <!-- Pager -->
                <ul class="pager">
                    <li class="next">
                        <a href="#">Older Posts &rarr;</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <hr>